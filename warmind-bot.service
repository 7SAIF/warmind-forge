[Unit]
Description=Warmind DEVEL Discord Bot
After=syslog.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/opt/devel/warmind
PIDFile=/var/run/warmind-bot.pid
ExecStart=/usr/bin/python3 /opt/devel/warmind/bot.py
StandardOutput=/opt/devel/warmind/logs/warmind-bot.log
StandardError=syslog
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
